		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate:kit": "drizzle-kit migrate",
		"db:migrate": "tsx drizzle/migrate.ts",
		"db:studio": "drizzle-kit studio",
		"db:seed": "tsx src/lib/server/db/seed.ts"
	},
